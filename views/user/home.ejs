<!-- product section -->
<div class="product-section mt-150 mb-150">
  <div class="container" >
    <div class="row ">
      <div class="col-lg-8 offset-lg-2 text-center">
        <div class="section-title">
          <h3><span class="orange-text">Best</span> sellers</h3>
          <p>
            Lorem ipsum dolor sit amet, consectetur adipisicing elit. Aliquid,
            fuga quas itaque eveniet beatae optio.
          </p>
        </div>
      </div>
    </div>

    <div class="row ">
    <%for(  let i=1;i<=product.length;i++){  %> 
      <div class="col-lg-4 col-md-6 text-center">
        <div class="single-product-item ">
          <div class="product-image">

            <a href="/singleproduct?id=<%= product[i-1]._id %>"
              ><img src="/multerfiles/img/<%= product[i-1].image[0] %>" alt=""
            /></a>
          </div>
          <h3><%= product[i-1].product %></h3>
          <p class="product-price"><span>Per Kg</span>Rs.<%= product[i-1].productprize %></p>
          <a href="/addToCart?id=<%= product[i-1]._id %>" class="cart-btn"
            ><i class="fas fa-shopping-cart"></i> Add to Cart</a
          >
        </div>
      </div>
      <% } %> 
    </div>
  </div>
</div>
<!-- end product section -->

